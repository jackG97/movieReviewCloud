
    <div class="panel-body">
      <div class="row">
        <div class="col-md-4">
          <%= image_tag @movie.image.url(:medium) %>
          <div class="table-responsive">
            <table class="table">
              <tbody>
                <tr>

                  <td><% @movie.title %></td>
                </tr>
                <tr>
                  <td><strong>Description:</strong></td>
                  <td><%= @movie.description %></td>
                </tr>
                <tr>
                  <td><strong>Movie length:</strong></td>
                  <td><%= @movie.movie_length %></td>
                </tr>
                <tr>
                  <td><strong>Director:</strong></td>
                  <td><%= @movie.director %></td>
                </tr>
                <tr>
                  <td><strong>Rating:</strong></td>
                  <td><%= @movie.rating %></td>
                </tr>
              </tbody>
            </table>

            <%= link_to "Write a Comment", new_movie_review_path(@movie), class: "btn btn-danger" %>

          </div>
        </div>
        <div class="col-md-7 col-md-ffset-1" align="right">
            <h2 class = "review-title"><%= @movie.title %></h2>


            <% if @reviews.blank? %>
            <h4>No reviews just yet, would you like to add the first!</h4>
            <%= link_to "Write Review", new_movie_review_path(@movie), class: "btn btn-danger" %>
          <% else %>
            <% @reviews.each do |review| %>
              <div class="reviews">

                <td><strong>Comment:</strong></td>
                <p><%= review.comment %></p>
                <td><strong>Rating out of 5:</strong></td>
                <p><%= review.rating %></p>
              </div>

            <% end %>
          <% end %>
        </div>
      </div>



      <%= link_to 'Edit', edit_movie_path(@movie) %> |
      <%= link_to "Delete", movie_path, :confirm => "Are you sure?", :method => :delete %> |

      <%= link_to 'Back', movies_path %>
    </div>
